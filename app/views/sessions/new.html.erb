<% provide(:title, "Log In") %>

<h1>Log in</h1>


<%= form_for(:session, url: login_path) do |f| %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= link_to "(forgot password)", new_password_reset_path %>
	<%= f.password_field :password %>

	<%= f.label :remember_me %>
	<%= f.check_box :remember_me, {checked: true} %>

	<%= f.submit "Log in" %>
<% end %>